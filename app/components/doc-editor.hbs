<div class="document" {{did-insert this.addKeyboardShortcuts}}>
  {{#each @doc.blocks as |block index|}}
    <BlockEditor @theBlock={{block}}
                 @select={{this.selectBlock}}
                 @update={{this.updateBlock}}
                 @delete={{this.deleteBlock}}
                 @isSelected={{eq this.selected block.id}}
                 @isPendingCut={{eq this.cutBlock block.id}}/>
  {{/each}}

  <button type="button" {{on "click" this.addBlock}}>Add</button>
</div>
